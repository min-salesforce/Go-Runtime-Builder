                    console.log(`üìè FULL STATE: scrollTop=${scrollTop}px > compactThreshold=${compactThreshold}px = ${shouldBeCompact}`);
                }
                
                // Apply state changes with debouncing to prevent feedback loops
                if (shouldBeCompact && !isCurrentlyCompact && timeSinceLastChange > debounceDelay) {
                    console.log(`üîÑ TRANSITION TO COMPACT: ${scrollTop}px (debounce passed: ${timeSinceLastChange}ms > ${debounceDelay}ms)`);
                    header.classList.add('scrolled');
